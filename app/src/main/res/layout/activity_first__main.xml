<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Second_Main"
    android:background="@drawable/imgislam">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/buttm1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:background="@drawable/din"
            android:onClick="buClick"
            android:layout_marginRight="50dp"/>


        <Button
            android:id="@+id/buttm2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:onClick="buClick"
            android:background="@drawable/madania" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:layout_gravity="center">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20dp"
          android:text="التربية الإسلامية"
          android:textStyle="bold"
          android:textColor="#EE4B18"
          android:layout_marginLeft="-15dp"
          android:layout_marginRight="30dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="التربية المدنية"
            android:textColor="#EE4B18"
            android:textStyle="bold"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/buttm3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:background="@drawable/math"
            android:onClick="buClick"
            android:layout_marginRight="50dp"/>

        <Button
            android:id="@+id/buttm4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:onClick="buClick"
            android:background="@drawable/arabe" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="الرياضيات"
       android:layout_marginRight="55dp"
            android:textStyle="bold"
            android:textColor="#EE4B18"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="اللغة العربية"
            android:textColor="#EE4B18"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/buttm5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:background="@drawable/animals"
            android:onClick="buClick"
            android:layout_marginRight="50dp"/>

        <Button
            android:id="@+id/buttm6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:onClick="buClick"
            android:background="@drawable/icon" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="الحيوانات"
         android:layout_marginRight="95dp"
            android:textStyle="bold"
            android:textColor="#EE4B18"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="العلوم"
            android:textColor="#EE4B18"
            android:textStyle="bold"
            />

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/image7">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:progressDrawable="@drawable/pb_drawable"
            android:max="100"
            android:visibility="visible"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rectangle_1"
            android:layout_width="265dp"
            android:layout_height="76dp"
            android:layout_weight="0"
            android:background="@drawable/rectangle_4"
            android:text="من اسم الحيوان الذي يقف بجانب وحيد القرن؟"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/animal2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp"
        >

        <Button
            android:id="@+id/rectangle_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:onClick="buClick"
            android:background="@drawable/rectangle_6"
            android:text="حمار" />

        <Button
            android:id="@+id/rectangle_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:onClick="buClick"
            android:background="@drawable/rectangle_6"
            android:text="زرافة" />

        <Button
            android:id="@+id/rectangle_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_6"
            android:textSize="30sp"
            android:onClick="buClick"
            android:text="اسد" />

        <Button
            android:id="@+id/rectangle_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:background="@drawable/rectangle_6"
            android:onClick="buClick"
            android:text="قرد" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/rectangle_6"
            android:layout_width="107dp"
            android:layout_height="53dp"
            android:layout_weight="0"
            android:background="@drawable/rectangle_6"
            android:text="التالي"
            android:onClick="buClick"
            android:textSize="30sp"
            />
    </LinearLayout>
</LinearLayout>
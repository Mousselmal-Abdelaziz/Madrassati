<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/img53">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:progressDrawable="@drawable/pb_drawable"
            android:max="100"
            android:visibility="visible"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/buttm1"
            android:layout_width="265dp"
            android:layout_height="76dp"
            android:layout_weight="0"
            android:background="@drawable/rectangle12"
            android:text="اكمل الحديث الشريف ب:"
            android:textSize="25sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        >




        <Button
            android:id="@+id/buttm4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:background="@drawable/rectangle10"
            android:textSize="25dp"
            android:text="منا"
            android:onClick="buClick"
            />

        <Button
            android:id="@+id/buttm3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textSize="25dp"
            android:onClick="buClick"
            android:background="@drawable/rectangle10"
            android:text="يرحم"/>


        <Button
            android:id="@+id/buttm2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textSize="25dp"
            android:onClick="buClick"
            android:text="يُوقر"
            android:background="@drawable/rectangle10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp">


        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textSize="23dp"

            android:textColor="#000000"
            android:text=" كبيرنا" />
        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"

            android:textSize="23dp"
            android:textColor="#000000"
            android:text=".." />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"

            android:textSize="23dp"
            android:textColor="#000000"
            android:text= " صغيرنا و " />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:text=".."
            android:textColor="#000000"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"

            android:textSize="23dp"
            android:textColor="#000000"
            android:text=" من لم " />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textSize="23dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:text=".." />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"

            android:textSize="23dp"
            android:textColor="#000000"
            android:text="ليس" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttm5"
            android:layout_width="117dp"
            android:layout_height="53dp"
            android:layout_weight="0"
            android:background="@drawable/rectangle10"
            android:onClick="buClick"
            android:text="التالي"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/arabeimg">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:progressDrawable="@drawable/pb_drawable_white"
            android:max="100"
            android:visibility="visible"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="120dp">

        <Button
            android:id="@+id/rectangle_1"
            android:layout_width="265dp"
            android:layout_height="76dp"
            android:layout_weight="0"
            android:background="@drawable/rectangle5"
            android:text="رتب الكلمات وكون منها جملة:"
            android:textSize="30sp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:id="@+id/rectangle_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="25dp"
            android:onClick="buClick"
            android:text="غرس"
            android:background="@drawable/rectangle7"
            />

        <Button
            android:id="@+id/rectangle_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="25dp"
            android:onClick="buClick"
            android:text="التفاح"
            android:background="@drawable/rectangle7"
            />

        <Button
            android:id="@+id/rectangle_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle7"
            android:textSize="25dp"
            android:text="احمد"
            android:onClick="buClick"
            />

        <Button
            android:id="@+id/rectangle_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="25dp"
            android:onClick="buClick"
            android:background="@drawable/rectangle7"
            android:text="شجيرة"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=""
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rectangle_6"
            android:layout_width="117dp"
            android:layout_height="53dp"
            android:layout_weight="0"
            android:background="@drawable/rectangle7"
            android:onClick="buClick"
            android:text="التالي"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>